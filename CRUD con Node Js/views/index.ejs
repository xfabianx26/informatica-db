  $('#users').DataTable({    
    ajax: {
        url: "/data",
        dataSrc: ""
    },   
    columns: [ 
        {"data": "id"},        
        {'data': 'user'},
        {'data': 'rol'},          
        {"data": null,
            "render": function (data) { 
                return '<a href="/edit/'+data.id+ '"class="btn btn-info"><i class="fas fa-edit"></i></a><a onclick="confirmar('+data.id+')" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>'                           
                }
        }
    ],
    pageLength : 5,
    lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todos']]     
  }); 


  function confirmar(id) {
    
    Swal.fire({
        text: 'Â¿Confirma eliminar el registro: '+id+'?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: ' #008f39',
        confirmButtonText: 'Confirmar'
      }).then((result) => {
        if (result.isConfirmed) {   
          window.location = '/delete/'+id;                              
        }
    });
  };
  </script>

